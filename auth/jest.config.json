{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },

  "testEnvironment": "node",
  "clearMocks": true,
  "setupFilesAfterEnv": ["<rootDir>/test/setup.ts"],
  "moduleNameMapper": {
    "^@modules/(.*)$": "<rootDir>/src/modules/$1",
    "^@auth/(.*)$": "<rootDir>/src/modules/auth/$1",
    "^@config/(.*)$": "<rootDir>/src/config/$1"
  }
}
